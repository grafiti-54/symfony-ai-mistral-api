    <form method="post" action="{{ path('app_chat') }}">
        <label for="question">Posez votre question :</label><br>
        <textarea id="question" name="question" rows="4" cols="60">{{ question|default('') }}</textarea><br>
        <button type="submit">Envoyer</button>
    </form>

